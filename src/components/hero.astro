---
import { Container } from './container';
---

<div class="hero">
  <Container>
    <img
      alt="Timurr Logo"
      class="logo"
      height={250}
      src="/logo.svg"
      width={250}
    />

    <h1 class="desc">A distraction-free timer for the complex ADHD mind</h1>
  </Container>
</div>

<style>
  .hero {
    padding-top: 100px;
    margin-bottom: 50px;
    text-align: center;

    & .logo {
      display: block;

      /* height: 45px; */
      margin: 0 auto;
      margin-bottom: 12px;
    }

    & .title {
      font-family: var(--font-display);
      font-size: var(--font-2xlg);
      font-weight: 400;
    }

    & .desc {
      margin-top: 8px;
      color: var(--color-foreground-subtle);
    }
  }
</style>
